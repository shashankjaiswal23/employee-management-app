    <meta name="author" content="">
    <title>Employee | Edit</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </nav> 
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center main">
          <div>
            <h1 class="mt-5"><%=app%></h1>
          </div>
        </div>
        </div>
    </div>
          
    <form class="form-horizontal" action="/" method="POST">
      <div class="">
        <label class="control-label col-sm-6" for="name">Name:</label>
        <div class="col-sm-10">
          <input type="name" name="name" class="form-control" id="namel" placeholder="name">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-6" for="email">Email:</label>
        <div class="col-sm-10">
          <input type="email" name="email" class="form-control" id="email" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-6 col-sm-10">
          <div class="checkbox">
            <label> <input type="radio" name="etype" value="Permanent"> Permanent</label>
            <label> <input type="radio"  name="etype" value="Temperory"> Temperory</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-6" for="hourlyRate">Hourly Rate:</label>
        <div class="col-sm-10">
          <input type="hrt" name="hourlyRate" class="form-control" id="hrt" placeholder="Hourly Rate">
        </div>
      </div>
      <label class="control-label col-sm-6" for="totalHours">total Hours:</label>
        <div class="col-sm-10">
          <input type="hrt" name="totalHours" class="form-control" id="hrt" placeholder="Hourly Rate">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>

  </body>
</html>